# ==================== 主API配置 ====================
# 用于被测试的模型
API_KEY=your-api-key-here
API_BASE_URL=https://api.openai.com/v1/chat/completions
API_MODEL=model
API_TEMPERATURE=0.7
API_TIMEOUT=600
API_MAX_RETRIES=3

# 流式API配置
STREAM_ENABLED=true
STREAM_FALLBACK=true

# ==================== 评估模型配置 ====================
# 用于评估sum/split任务结果的Judge模型（可选）
# 如果不配置，则使用主API配置或回退到规则评估
JUDGE_ENABLED=true
JUDGE_API_KEY=your-judge-api-key-here
JUDGE_API_BASE_URL=https://api.openai.com/v1/chat/completions
JUDGE_MODEL=gpt-4
JUDGE_TEMPERATURE=0.1
JUDGE_TIMEOUT=30
JUDGE_MAX_TOKENS=200
JUDGE_MAX_RETRIES=2
JUDGE_FALLBACK_TO_RULES=true

CONDA_ENV_NAME=eval_env

CONDA_TEST_ENV_NAME=eval_test_env

# ==================== 环境配置 ====================
EVAL_ENV=dev

# ==================== 日志配置 ====================
LOG_LEVEL=INFO
